
@model List<Blogs>;

<div class="brand_color">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="titlepage">
                    <h2>blog</h2>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- Lastestnews -->
<div class="Lastestnews blog">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="titlepage">

                    <span>It is a long established fact that a reader will be distracted by the readable <br>content of a page when looking at its layout. The point of using Lorem </span>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var blogs in Model)
            {
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 margin">
                    <div class="news-box">
                        <figure><img src="images/@blogs.Picture" alt="img" /></figure>
                        <h3>@blogs.Title</h3>
                        <span>@blogs.Date</span>
                        <p>@blogs.UpTitle</p>
                    </div>
                </div>
            }
           
            
        </div>
    </div>
</div>
<!-- end Lastestnews -->
